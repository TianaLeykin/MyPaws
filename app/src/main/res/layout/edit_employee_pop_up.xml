<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_employee_pop_up_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layoutDirection="rtl"
    android:layout_alignParentStart="true"
    app:cardElevation="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/colorPrimary"
        android:layoutDirection="rtl"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/employee_data_popup_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/icons8_monkey_26"/>

        <EditText
            android:id="@+id/employee_data_popup_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/employee_data_popup_icon"
            android:hint="@string/name"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColorHint="@color/white"
            android:inputType="text"/>

        <EditText
            android:id="@+id/employee_data_popup_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/employee_data_popup_name"
            android:layout_toEndOf="@+id/employee_data_popup_icon"
            android:hint="@string/phone"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColorHint="@color/white"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/employee_data_popup_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/employee_data_popup_phone"
            android:layout_toEndOf="@+id/employee_data_popup_icon"
            android:hint="@string/email"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColorHint="@color/white"
            android:inputType="textEmailAddress"/>


        <ImageButton
            android:id="@+id/add_employee_popup_cancel_btn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/icons8_cancel_26"
            android:background="@null"
            android:contentDescription="@string/cancel"/>

        <Button
            android:id="@+id/add_employee_popup_save_btn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="8dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/employee_data_popup_email"
            android:background="@color/orange"
            android:text="@string/save"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:textAppearanceSmall" />

        <Button
            android:id="@+id/add_employee_popup_delete_btn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:padding="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@id/add_employee_popup_save_btn_id"
            android:layout_below="@id/employee_data_popup_email"
            android:background="@color/orange"
            android:text="@string/delete"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:textAppearanceSmall" />

    </RelativeLayout>

</android.support.v7.widget.CardView>